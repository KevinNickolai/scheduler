{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 14",

	"compilerOptions": {
		"lib": [ "es2020" ],
		"module": "commonjs",
		"target": "es2020",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "build"
	},
	"include": ["./*.ts", "./*/*.js", "classes/database/databaseWrapper.ts", "classes/scheduleEvent.ts", "classes/autofireEvent.ts", "classes/schedule.ts"],
	"exclude": [
		"node_modules",
		"src"
	]
}
